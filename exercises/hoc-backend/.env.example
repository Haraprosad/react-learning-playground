# Environment Configuration
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=hoc_db
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100
MONGODB_CONNECT_TIMEOUT_MS=5000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32

# Firebase Configuration
# Option 1: Path to service account key file (for local development)
FIREBASE_CREDENTIALS_PATH=serviceAccountKey.json

# Option 2: JSON string (for cloud deployment - AWS, GCP, etc.)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
PASSWORD_RESET_RATE_LIMIT=3  # Per hour

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text (use json for production)

# Sentry Error Tracking (Optional - for production)
# Get your DSN from https://sentry.io
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# API Configuration
API_V1_PREFIX=/api/v1
API_TITLE=HOC Authentication API
API_VERSION=1.0.0

# Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
